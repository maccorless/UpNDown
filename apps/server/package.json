    "express": "^4.21.2",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "tsx": "^4.19.2",
    "vitest": "^2.1.8",
    "eslint": "^9.17.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/cors": "^2.8.17",
    "socket.io-client": "^4.8.1",
    "@typescript-eslint/parser": "^8.18.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2"
  }
